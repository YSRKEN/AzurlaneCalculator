<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="AzurlaneCalculator.Views.CalcExpPage">

	<StackLayout>
		<Label Text="経験値計算機"
		Margin="10,10,10,10" FontSize="Large"
		HorizontalOptions="Center"/>
		<Grid HorizontalOptions="Center">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<Label Grid.Row="0" Grid.Column="0" Text="現在のレベル："
				FontSize="Large" HorizontalOptions="End" Margin="10,10,10,10"/>
			<Label Grid.Row="1" Grid.Column="0" Text="目標のレベル："
				FontSize="Large" HorizontalOptions="End" Margin="10,10,10,10"/>
			<Picker Grid.Row="0" Grid.Column="1" WidthRequest="50"
				ItemsSource="{Binding LevelList}" SelectedIndex="{Binding StartLevel.Value, Mode=TwoWay}"
				HorizontalOptions="End" Margin="10,10,10,10"/>
			<Picker Grid.Row="1" Grid.Column="1" WidthRequest="50"
				ItemsSource="{Binding LevelList}" SelectedIndex="{Binding GoalLevel.Value, Mode=TwoWay}"
				HorizontalOptions="End" Margin="10,10,10,10"/>
		</Grid>
		<Label Text="{Binding OutputText.Value, Mode=OneWay}"
		Margin="10,10,10,10" FontSize="Large"
		HorizontalOptions="Center"/>
	</StackLayout>
</ContentPage>
